          <div class="form-group">
            <label for="lastname">lastname</label>
            <input
              type="lastname"
              id="lastname"
              name="lastname"
              required
            />S
          </div>
          <div class="form-group">
            <label for="firstname">firstname</label>
            <input
              type="firstname"
              id="firstname"
              name="firstname"
              required
            />
          </div>
          <div class="form-group">
            <label for="username">username</label>
            <input
              type="username"
              id="username"
              name="username"
              required
            />
          </div>
          <div class="form-group">
            <label for="email">Correo electrónico</label>
            <input
              type="email"
              id="email"
